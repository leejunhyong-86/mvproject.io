# Supabase 연결 정보
SUPABASE_URL=your_supabase_url
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# 크롤링 설정
MAX_PRODUCTS=10
HEADLESS=true

# ============================================
# 크롤링 모드 선택
# ============================================
# popularity: 인기순 (기본값)
# newest: 최신순
# end_date: 마감 임박순
# most_funded: 최다 모금순
# magic: 추천순
# search: 키워드 검색 (SEARCH_KEYWORD 필요)
CRAWL_MODE=popularity

# 검색 모드일 때 사용할 키워드 (CRAWL_MODE=search 필요)
SEARCH_KEYWORD=smart watch

# 특정 카테고리 선택 (선택사항)
# technology, design, games, art, music, film, all
CATEGORY=all
