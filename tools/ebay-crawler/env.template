# Supabase 연결 정보
SUPABASE_URL=your_supabase_url
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# 크롤링 설정
MAX_PRODUCTS=10
HEADLESS=true

# ============================================
# 크롤링 모드 선택
# ============================================
# deals: Daily Deals (기본값)
# bestsellers: 카테고리별 베스트셀러
# trending: 인기 급상승 상품
# search: 검색 키워드 기반
CRAWL_MODE=deals

# 검색 모드일 때 사용할 키워드 (CRAWL_MODE=search 필요)
SEARCH_KEYWORD=wireless earbuds

# 특정 카테고리 선택 (선택사항)
# electronics, fashion, home-garden, collectibles, toys, sporting-goods, all
CATEGORY=all
