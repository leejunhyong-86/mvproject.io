# Supabase 연결 정보
SUPABASE_URL=your_supabase_url
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# 크롤링 설정
MAX_PRODUCTS=10
HEADLESS=true

# ============================================
# 크롤링 모드 선택
# ============================================
# popular: 인기순 (기본값)
# amount: 모인금액순
# recent: 최신순
# closing: 마감임박순
# search: 키워드 검색 (SEARCH_KEYWORD 필요)
CRAWL_MODE=popular

# 검색 모드일 때 사용할 키워드 (CRAWL_MODE=search 필요)
SEARCH_KEYWORD=전자기기

# 특정 카테고리 선택 (선택사항)
# tech, fashion, beauty, food, home, design, all
CATEGORY=all
